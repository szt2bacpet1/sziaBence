<UserControl x:Class="Flyhigh.Desktop.Views.Legijaratok.LegijaratokView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flyhigh.Desktop.Views.Legijaratok"             
     		 xmlns:viewModels="clr-namespace:Flyhigh.Desktop.ViewModels.Legijaratok" d:DataContext="{d:DesignInstance Type=viewModels:GepAdatokViewModel}"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="35"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <local:LegijaratokMenu Grid.Row="0"></local:LegijaratokMenu>
        <ContentControl Grid.Row="1" Content="{Binding CurrentChildViewModel}" Margin="64,23,110,68"></ContentControl>
    </Grid>
</UserControl>
