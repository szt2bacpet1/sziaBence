<UserControl x:Class="Flyhigh.Desktop.Views.Header"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Flyhigh.Desktop.Views"
             mc:Ignorable="d" 
             d:DesignHeight="35" d:DesignWidth="800">
    <!--Header -->
    <Border>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <!-- Első téglalap -->
            <Rectangle Fill="{StaticResource HeaderColor}" RadiusX="0" RadiusY="5" Grid.ColumnSpan="2"/>

            <!-- Második téglalap -->


        </Grid>
    </Border>
</UserControl>